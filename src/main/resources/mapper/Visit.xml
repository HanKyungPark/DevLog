<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bitcamp.devlog.mapper.VisitMapper">

    <select id="findByAccountIdAndVisitDate" resultType="long" parameterType="Map">
        select `count` from visit
        where account_id=#{accountId} and visit_date=#{visitDate}
    </select>

    <select id="findAllByAccountId" resultType="Visit" parameterType="String">
        select * from visit
        where account_id=#{accountId}
    </select>


    <update id="updateVisit" parameterType="Long">
        update visit set count=count+1 where account_id=#{account_id}
    </update>

    <select id="findVisitCountByAccountId" resultType="long" parameterType="long">
        select sum(`count`) from visit
        where account_id = #{accountId}
    </select>

</mapper>