<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bitcamp.devlog.mapper.AccountMapper">
    <insert id="save" parameterType="Account">
        insert into account (name,email,provider_type,a_created_at,a_updated_at,file) values(#{name},#{email},'0',now(),now(),#{file})
    </insert>


    <update id="update" parameterType="Account">
        update account set a_updated_at=now(), biography=#{biography}, blog_id=#{blogId}, homepage=#{homepage}, file=#{file} where account_id=#{accountId}
    </update>

    <select id="findByEmail" parameterType="String" resultType="Account">
        select * from account where email=#{email}
    </select>

    <insert id="saveBlog" parameterType="Account">
        insert into account (account_id,blog_id,biography,homepage) values (#{account_id},#{blog_id},#{biography},#{homepage})
    </insert>


</mapper>