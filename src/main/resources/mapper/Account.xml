<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bitcamp.devlog.mapper.AccountMapper">
    <insert id="saveAccount" parameterType="Account">
        insert into account (name,email,provider_type,a_created_at,a_updated_at,file) values(#{name},#{email},'0',now(),now(),#{file})
    </insert>


    <update id="updateAccount" parameterType="Account">
        update account set a_update_at=now(), biography=#{biography}, blog_id=#{blogId}, homapage=#{homepage}, file=#{file}
    </update>
</mapper>